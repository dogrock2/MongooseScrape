<nav class="navbar navbar-expand-lg navbar-light bg-primary rounded my-1">
    <span class="navbar-brand text-light" id="title">
        <h2>Mongo Scraper</h2>
    </span>
    <div class="navbar mt-2" id="navbarNav">
        <ul id="navLst">
            <li class="nav-item">
                <a class="nav-link text-light" href="/">Home</a>
            </li>
            <li class="nav-item">
                <span class="nav-link text-light currentLink rounded mr-3">Saved Articles(<span class="savedCntSpan">0</span>)</span>
            </li>
        </ul>
    </div>
</nav>
<div class="row px-3">
    <div class="col-12 text-center d-flex justify-content-center flex-column rounded" id="bgPic">       
        <div class="text-primary align-self-center">
            <span id='thirdHeadingSaved'>Your Saved Articles</span>
        </div>
        <div class="text-primary align-self-center">
            <span id='secondaryHeadingSaved'>Saved Articles</span>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12" id="resultsDivSaved">
        {{#if dbSavedResult}}
            {{#each dbSavedResult}} 
                <div class='px-2 newDiv bg-warning rounded my-1 py-2' id='resCnt'>
                    {{#if image}}
                       <img src="{{image}}" class='thumbImg mr-2'>
                    {{/if}}
                    <span class='titleSpan' style="font-family: 'Spectral SC', serif;"><b><u>{{title}}</u></b></span>
                    <p class="font-italic text-light newsDesc">{{desc}}</p>
                    
                        <div class="row">
                             <div class="col-md-8">
                                  <a class='newsLink' href="{{link}}">{{link}}</a>
                             </div>
                             <div class='col-md-4 text-right'>                                
                                <button class='btn btn-info msgBtn mr-1'>Article Notes</button>                            
                                <button class='btn btn-danger deleteBtn'>Delete from Saved</button>                                
                             </div>
                        </div>                    
                </div>
            {{/each}}
        {{else}}    
            <div class="bg-warning rounded text-center text-light font-weight-bold my-1 py-2">
                <span class='containerMsg'><h2>NO SAVED ARTICLES.</h2> </span>
            </div>
        {{/if}}

    </div>
</div>